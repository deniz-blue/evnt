{
	"$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
	"productName": "vantage",
	"version": "0.1.0",
	"identifier": "blue.deniz.vantage",
	"build": {
		"frontendDist": "../build/client",
		"devUrl": "http://localhost:5173",
		"beforeDevCommand": "pnpm dev",
		"beforeBuildCommand": "pnpm build"
	},
	"app": {
		"windows": [
			{
				"title": "Vantage Events Viewer",
				"width": 800,
				"height": 600,
				"resizable": true,
				"maximized": true,
				"fullscreen": false
			}
		],
		"security": {
			"csp": null
		}
	},
	"bundle": {
		"active": true,
		"targets": "all",
		"icon": [
			"../public/icon.svg",
			"../public/icon.png"
		]
	},
	"plugins": {
		"deep-link": {
			"mobile": [
				{
					"scheme": [
						"web+evnt"
					],
					"appLink": false
				},
				{
					"scheme": [
						"https"
					],
					"host": "event.nya.pub",
					"appLink": true
				},
				{
					"scheme": [
						"https"
					],
					"host": "vantage.deniz.blue",
					"appLink": true
				}
			]
		}
	}
}