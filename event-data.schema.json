{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "id": "EventData",
  "title": "Event Data",
  "description": "An event",
  "$id": "https://raw.githubusercontent.com/deniz-blue/events-format/refs/heads/main/event-data.schema.json",
  "type": "object",
  "properties": {
    "v": {
      "description": "The version of the Event Data schema",
      "type": "number",
      "const": 0
    },
    "id": {
      "type": "string"
    },
    "name": {
      "description": "The name of the event",
      "$ref": "#/$defs/Translations"
    },
    "description": {
      "description": "A short description of the event",
      "$ref": "#/$defs/Translations"
    },
    "venues": {
      "description": "The venues associated with this event",
      "type": "array",
      "items": {
        "$ref": "#/$defs/Venue"
      }
    },
    "instances": {
      "description": "The instances of the event",
      "type": "array",
      "items": {
        "$ref": "#/$defs/EventInstance"
      }
    },
    "components": {
      "description": "Additional components of the event",
      "type": "array",
      "items": {
        "$ref": "#/$defs/EventComponent"
      }
    }
  },
  "required": [
    "v",
    "name",
    "venues",
    "instances"
  ],
  "additionalProperties": false,
  "$defs": {
    "Translations": {
      "id": "Translations",
      "type": "object",
      "propertyNames": {
        "type": "string"
      },
      "additionalProperties": {
        "anyOf": [
          {
            "type": "string"
          },
          {
            "type": "null"
          }
        ]
      }
    },
    "Venue": {
      "id": "Venue",
      "oneOf": [
        {
          "$ref": "#/$defs/PhysicalVenue"
        },
        {
          "$ref": "#/$defs/OnlineVenue"
        }
      ]
    },
    "PhysicalVenue": {
      "id": "PhysicalVenue",
      "title": "Physical Venue",
      "description": "A venue with a known or unknown physical location",
      "type": "object",
      "properties": {
        "venueId": {
          "description": "ID of the venue to be used in Event Instances",
          "type": "string"
        },
        "venueName": {
          "description": "The name of the venue",
          "$ref": "#/$defs/Translations"
        },
        "venueType": {
          "type": "string",
          "const": "physical"
        },
        "address": {
          "$ref": "#/$defs/Address"
        },
        "coordinates": {
          "description": "Approximate coordinates",
          "$ref": "#/$defs/LatLng"
        },
        "googleMapsPlaceId": {
          "type": "string"
        }
      },
      "required": [
        "venueId",
        "venueName",
        "venueType"
      ],
      "additionalProperties": false
    },
    "Address": {
      "id": "Address",
      "type": "object",
      "properties": {
        "countryCode": {
          "description": "The ISO 3166-1 alpha-2 country code",
          "type": "string"
        },
        "postalCode": {
          "description": "The postal code of the address, if any",
          "type": "string"
        },
        "addr": {
          "description": "Full address excluding country and postal code",
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "LatLng": {
      "id": "LatLng",
      "type": "object",
      "properties": {
        "lat": {
          "title": "Latitude",
          "type": "number"
        },
        "lng": {
          "title": "Longitude",
          "type": "number"
        }
      },
      "required": [
        "lat",
        "lng"
      ],
      "additionalProperties": false
    },
    "OnlineVenue": {
      "id": "OnlineVenue",
      "type": "object",
      "properties": {
        "venueId": {
          "description": "ID of the venue to be used in Event Instances",
          "type": "string"
        },
        "venueName": {
          "description": "The name of the venue",
          "$ref": "#/$defs/Translations"
        },
        "venueType": {
          "type": "string",
          "const": "online"
        },
        "url": {
          "type": "string"
        }
      },
      "required": [
        "venueId",
        "venueName",
        "venueType"
      ],
      "additionalProperties": false
    },
    "EventInstance": {
      "id": "EventInstance",
      "title": "Event Instance",
      "description": "A part of an event that can occur at a known or unknown date and/or time and a known or unknown place or places.",
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "venueIds": {
          "description": "The IDs of the venues where this event instance takes place",
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "start": {
          "type": "string"
        },
        "end": {
          "type": "string"
        }
      },
      "required": [
        "venueIds"
      ],
      "additionalProperties": false
    },
    "EventComponent": {
      "id": "EventComponent",
      "oneOf": [
        {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "const": "link"
            },
            "data": {
              "$ref": "#/$defs/LinkComponent"
            }
          },
          "required": [
            "type",
            "data"
          ],
          "additionalProperties": false
        }
      ]
    },
    "LinkComponent": {
      "id": "LinkComponent",
      "type": "object",
      "properties": {
        "url": {
          "type": "string"
        },
        "name": {
          "$ref": "#/$defs/Translations"
        },
        "description": {
          "$ref": "#/$defs/Translations"
        },
        "disabled": {
          "type": "boolean"
        },
        "opensAt": {
          "type": "string"
        },
        "closesAt": {
          "type": "string"
        }
      },
      "required": [
        "url",
        "disabled"
      ],
      "additionalProperties": false
    }
  }
}