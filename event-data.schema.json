{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "id": "EventData",
  "$id": "https://raw.githubusercontent.com/deniz-blue/events-format/refs/heads/main/event-data.schema.json",
  "type": "object",
  "properties": {
    "v": {
      "type": "number",
      "const": 0
    },
    "id": {
      "type": "string"
    },
    "name": {
      "$ref": "#/$defs/Translations"
    },
    "description": {
      "$ref": "#/$defs/Translations"
    },
    "venues": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/Venue"
      }
    },
    "instances": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/EventInstance"
      }
    },
    "components": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/EventComponent"
      }
    }
  },
  "required": [
    "v",
    "name",
    "venues",
    "instances"
  ],
  "additionalProperties": false,
  "$defs": {
    "Translations": {
      "id": "Translations",
      "type": "object",
      "propertyNames": {
        "type": "string"
      },
      "additionalProperties": {
        "anyOf": [
          {
            "type": "string"
          },
          {
            "type": "null"
          }
        ]
      }
    },
    "Venue": {
      "id": "Venue",
      "oneOf": [
        {
          "$ref": "#/$defs/PhysicalVenue"
        },
        {
          "$ref": "#/$defs/OnlineVenue"
        }
      ]
    },
    "PhysicalVenue": {
      "id": "PhysicalVenue",
      "type": "object",
      "properties": {
        "venueId": {
          "type": "string"
        },
        "venueName": {
          "$ref": "#/$defs/Translations"
        },
        "venueType": {
          "type": "string",
          "const": "physical"
        },
        "address": {
          "$ref": "#/$defs/Address"
        },
        "coordinates": {
          "$ref": "#/$defs/LatLng"
        },
        "googleMapsPlaceId": {
          "type": "string"
        }
      },
      "required": [
        "venueId",
        "venueName",
        "venueType"
      ],
      "additionalProperties": false
    },
    "Address": {
      "id": "Address",
      "type": "object",
      "properties": {
        "countryCode": {
          "type": "string"
        },
        "postalCode": {
          "type": "string"
        },
        "addr": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "LatLng": {
      "id": "LatLng",
      "type": "object",
      "properties": {
        "lat": {
          "type": "number"
        },
        "lng": {
          "type": "number"
        }
      },
      "required": [
        "lat",
        "lng"
      ],
      "additionalProperties": false
    },
    "OnlineVenue": {
      "id": "OnlineVenue",
      "type": "object",
      "properties": {
        "venueId": {
          "type": "string"
        },
        "venueName": {
          "$ref": "#/$defs/Translations"
        },
        "venueType": {
          "type": "string",
          "const": "online"
        },
        "url": {
          "type": "string"
        }
      },
      "required": [
        "venueId",
        "venueName",
        "venueType"
      ],
      "additionalProperties": false
    },
    "EventInstance": {
      "id": "EventInstance",
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "venueIds": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "start": {
          "type": "string"
        },
        "end": {
          "type": "string"
        }
      },
      "required": [
        "venueIds"
      ],
      "additionalProperties": false
    },
    "EventComponent": {
      "id": "EventComponent",
      "oneOf": [
        {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "const": "link"
            },
            "data": {
              "$ref": "#/$defs/LinkComponent"
            }
          },
          "required": [
            "type",
            "data"
          ],
          "additionalProperties": false
        }
      ]
    },
    "LinkComponent": {
      "id": "LinkComponent",
      "type": "object",
      "properties": {
        "url": {
          "type": "string"
        },
        "name": {
          "$ref": "#/$defs/Translations"
        },
        "description": {
          "$ref": "#/$defs/Translations"
        },
        "disabled": {
          "type": "boolean"
        },
        "opensAt": {
          "type": "string"
        },
        "closesAt": {
          "type": "string"
        }
      },
      "required": [
        "url",
        "disabled"
      ],
      "additionalProperties": false
    }
  }
}