{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "id": "EventData",
  "title": "Event Data",
  "description": "An event",
  "$id": "https://raw.githubusercontent.com/deniz-blue/events-format/refs/heads/main/event-data.schema.json",
  "type": "object",
  "properties": {
    "v": {
      "description": "The version of the Event Data schema",
      "type": "number",
      "const": 0
    },
    "id": {
      "type": "string"
    },
    "name": {
      "description": "The name of the event",
      "$ref": "#/$defs/Translations"
    },
    "description": {
      "description": "A short description of the event",
      "$ref": "#/$defs/Translations"
    },
    "status": {
      "description": "The status of the event",
      "$ref": "#/$defs/EventStatus"
    },
    "venues": {
      "description": "The venues associated with this event",
      "type": "array",
      "items": {
        "$ref": "#/$defs/Venue"
      }
    },
    "instances": {
      "description": "The instances of the event",
      "type": "array",
      "items": {
        "$ref": "#/$defs/EventInstance"
      }
    },
    "components": {
      "description": "Additional components of the event",
      "type": "array",
      "items": {
        "$ref": "#/$defs/EventComponent"
      }
    }
  },
  "required": [
    "v",
    "name",
    "venues",
    "instances"
  ],
  "additionalProperties": false,
  "$defs": {
    "Translations": {
      "id": "Translations",
      "description": "A multilingual string",
      "default": {
        "en": ""
      },
      "examples": [
        {
          "en": "Example",
          "tr": "Ã–rnek",
          "lt": "Pavyzdys"
        }
      ],
      "defaultSnippets": [
        {
          "label": "Add English",
          "body": {
            "en": "$1"
          }
        },
        {
          "label": "Add other language",
          "body": {
            "$1": "$2"
          }
        }
      ],
      "type": "object",
      "propertyNames": {
        "description": "BCP37 or ISO 639-1 language code",
        "type": "string"
      },
      "additionalProperties": {
        "anyOf": [
          {
            "type": "string"
          },
          {
            "type": "null"
          }
        ]
      }
    },
    "EventStatus": {
      "id": "EventStatus",
      "anyOf": [
        {
          "description": "No disruptions - event is planned or has already occurred",
          "type": "string",
          "const": "planned"
        },
        {
          "description": "Event is not finalized",
          "type": "string",
          "const": "uncertain"
        },
        {
          "description": "The event has been postponed to an unknown later date",
          "type": "string",
          "const": "postponed"
        },
        {
          "description": "The event has been cancelled",
          "type": "string",
          "const": "cancelled"
        },
        {
          "description": "The event may be postponed or cancelled",
          "type": "string",
          "const": "suspended"
        }
      ]
    },
    "Venue": {
      "id": "Venue",
      "oneOf": [
        {
          "$ref": "#/$defs/PhysicalVenue"
        },
        {
          "$ref": "#/$defs/OnlineVenue"
        }
      ]
    },
    "PhysicalVenue": {
      "id": "PhysicalVenue",
      "title": "Physical Venue",
      "description": "A venue with a known or unknown physical location",
      "type": "object",
      "properties": {
        "venueType": {
          "type": "string",
          "const": "physical"
        },
        "venueId": {
          "description": "ID of the venue to be used in Event Instances",
          "type": "string"
        },
        "venueName": {
          "description": "The name of the venue",
          "$ref": "#/$defs/Translations"
        },
        "address": {
          "$ref": "#/$defs/Address"
        },
        "coordinates": {
          "description": "Approximate coordinates",
          "$ref": "#/$defs/LatLng"
        },
        "googleMapsPlaceId": {
          "type": "string"
        }
      },
      "required": [
        "venueType",
        "venueId",
        "venueName"
      ],
      "additionalProperties": false
    },
    "Address": {
      "id": "Address",
      "type": "object",
      "properties": {
        "countryCode": {
          "description": "The ISO 3166-1 alpha-2 country code",
          "type": "string"
        },
        "postalCode": {
          "description": "The postal code of the address, if any",
          "type": "string"
        },
        "addr": {
          "description": "Full address excluding country and postal code",
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "LatLng": {
      "id": "LatLng",
      "type": "object",
      "properties": {
        "lat": {
          "title": "Latitude",
          "type": "number"
        },
        "lng": {
          "title": "Longitude",
          "type": "number"
        }
      },
      "required": [
        "lat",
        "lng"
      ],
      "additionalProperties": false
    },
    "OnlineVenue": {
      "id": "OnlineVenue",
      "type": "object",
      "properties": {
        "venueType": {
          "type": "string",
          "const": "online"
        },
        "venueId": {
          "description": "ID of the venue to be used in Event Instances",
          "type": "string"
        },
        "venueName": {
          "description": "The name of the venue",
          "$ref": "#/$defs/Translations"
        },
        "url": {
          "type": "string"
        }
      },
      "required": [
        "venueType",
        "venueId",
        "venueName"
      ],
      "additionalProperties": false
    },
    "EventInstance": {
      "id": "EventInstance",
      "title": "Event Instance",
      "description": "A part of an event that can occur at a known or unknown date and/or time and a known or unknown place or places.",
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "venueIds": {
          "description": "The IDs of the venues where this event instance takes place",
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "start": {
          "description": "The start date and/or time",
          "$ref": "#/$defs/PartialDate"
        },
        "end": {
          "description": "The end date and/or time",
          "$ref": "#/$defs/PartialDate"
        },
        "status": {
          "description": "The status of the event instance",
          "$ref": "#/$defs/EventStatus"
        },
        "activities": {
          "description": "The activities taking place during this event instance",
          "type": "array",
          "items": {
            "$ref": "#/$defs/EventActivity"
          }
        }
      },
      "required": [
        "venueIds"
      ],
      "additionalProperties": false
    },
    "PartialDate": {
      "id": "PartialDate",
      "description": "An ISO 8601 date and time string that may be incomplete (e.g. '2023', '2023-05') and does not include timezone information (forced UTC)",
      "defaultSnippets": [
        {
          "label": "Current Date&Time",
          "body": "${1:${CURRENT_YEAR}-${CURRENT_MONTH}-${CURRENT_DATE}T${CURRENT_HOUR}:${CURRENT_MINUTE}}"
        }
      ],
      "type": "string"
    },
    "EventActivity": {
      "id": "EventActivity",
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "name": {
          "description": "The name of the activity",
          "$ref": "#/$defs/Translations"
        },
        "description": {
          "description": "The description of the activity",
          "$ref": "#/$defs/Translations"
        }
      },
      "required": [
        "name"
      ],
      "additionalProperties": false
    },
    "EventComponent": {
      "id": "EventComponent",
      "oneOf": [
        {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "const": "link"
            },
            "data": {
              "$ref": "#/$defs/LinkComponent"
            }
          },
          "required": [
            "type",
            "data"
          ],
          "additionalProperties": false
        }
      ]
    },
    "LinkComponent": {
      "id": "LinkComponent",
      "type": "object",
      "properties": {
        "url": {
          "description": "The URL of the link",
          "type": "string"
        },
        "name": {
          "description": "The name of the link",
          "$ref": "#/$defs/Translations"
        },
        "description": {
          "description": "A description of the link",
          "$ref": "#/$defs/Translations"
        },
        "disabled": {
          "description": "Whether the link is disabled",
          "type": "boolean"
        },
        "opensAt": {
          "description": "The date and/or time when the link becomes active",
          "$ref": "#/$defs/PartialDate"
        },
        "closesAt": {
          "description": "The date and/or time when the link becomes inactive",
          "$ref": "#/$defs/PartialDate"
        }
      },
      "required": [
        "url",
        "disabled"
      ],
      "additionalProperties": false
    }
  }
}